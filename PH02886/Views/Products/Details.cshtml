@model PH02886.Models.Product

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết</h2>

<div>
    <h4>Sản Phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prod_name)
        </dd>

        <dt>
            Mô tả
        </dt>
          
        <dd>
            @Html.DisplayFor(model => model.prod_desc)
        </dd>
        <dt>
            Danh Mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.cate_name)
        </dd>
        <dt>
            Hình Ảnh
        </dt><br /><br />
            <img src="../../image/image.jpg" class="img-thumbnail" width="100%" height="100%" /><br />
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.prod_id }) |
    @Html.ActionLink("Quay Lại", "Index")
</p>
