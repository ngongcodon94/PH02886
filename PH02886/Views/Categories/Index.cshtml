@model IEnumerable<PH02886.Models.Category>

@{
    ViewBag.Title = "Danh Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Mục</h2>

<p>
    @Html.ActionLink("Thêm Danh Mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Danh Mục
        </th>
        <th>
            Hành Động
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cate_name)
        </td>
        <td>
            <div class="btn btn-warning">@Html.ActionLink("Sửa", "Edit", new { id = item.cate_id })</div> |
            <div class="btn btn-info">@Html.ActionLink("Chi Tiết", "Details", new { id = item.cate_id })</div> |
            <div class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.cate_id })</div>
        </td>
    </tr>
}

</table>
